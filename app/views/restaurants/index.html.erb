<div class="mb-3 mt-3 p-4"><h1><strong>Restaurants List<strong></h1></div>
<div class="d-flex justify-content-start">
  <div class="col-md-3"><h3>Restaurant</h3></div>
  <div class="col-md-2"><h3>Category</h3></div>
</div>
<% @restaurants.each do |restaurant| %>
  <div class="d-flex justify-content-start">
    <div class="list-unstyled col-md-3"><h4><li><%= link_to restaurant.name, restaurant_path(restaurant) %></li></h4></div>
    <div class="list-unstyled col-md-2"><h4><%= restaurant.category.capitalize %></h4></div>
  </div>
<% end %>
<div class="list-unstyled col-md-3 mt-3">
  <%= link_to("New Restaurant", new_restaurant_path, class: "btn btn-secondary p-2 mb-2") %>
</div>
